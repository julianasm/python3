def faixa_etaria(idade):
    if 0 <= idade < 18:
        return 'Menor de idade'
    elif idade in range (18, 64):
        return 'Adulto'
    elif idade in range (65, 100):
        return 'Melhor idade'
    elif idade >= 100:
        return 'Centenario'
    else:
        return 'Idade invalida'

for idade in (17, 35, 87, 103, -2):
    print('a idade Ã© {} e a faixa etaria Ã© {}'.format(idade, faixa_etaria(idade)))

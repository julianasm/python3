#Lista01
#append
#remove
#reverse
lista = [] #sequencia mutavel, ou seja é possivel adicionar ou remover elementos, também pode ser heterogenea (float, int,str)
print(type(lista))
print(len(lista))
lista.append(1)
print(lista)
lista.append(5)
print(lista)
print(len(lista))

nova_lista = [1, 5, 'ana', 'bia', ] #aceita, mas n é uma boa pratica
print(nova_lista)
nova_lista.remove(5)
print(nova_lista)
nova_lista.reverse()
print(nova_lista) #lista muda sem ser necessária fazer nova atribuição

#lista02
lista = [1, 5, 'rebeca', 'guilherme', 3.14]
print(lista.index('guilherme')) #qual a posição do elemento na lista
print(lista[2])
print(1 in lista)
print('rebeca' in lista)
print(lista[4])
print(lista[-1]) #´pega o ultimo elemento da lista
print(lista[-5]) #pega o primeiro item, pois começa em 1

#lista03

lista = ['Ana', 'Lia', 'Rui','Paulo','Dani']
print(lista[1:3]) #vai ate o indice 3 mas ele não é exibido
print(lista[1:-1]) #vai ate o ultimo item mas n é exibido
print(lista[1:]) #primeiro elemento ate o final da lista
print(lista[:-1]) #vai do zero ate o ultimo item
print(lista[:]) #exibe lista do inicio ao fim
print(lista[::2]) #todos os itens de dois em dois
print(lista[::-1]) #printa lista ao contrario
del lista[2] #remove pelo indice
print(lista)
del lista[1:]
print(lista)








